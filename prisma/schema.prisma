// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo para los banners principales de la web
model Banner {
  id        Int      @id @default(autoincrement())
  titulo    String?
  imagen    String
  link      String?
  activo    Boolean  @default(false)
  createdAt DateTime @default(now())
}

// Modelo para los miembros del equipo
model EquipoDeTrabajo {
  id          Int      @id @default(autoincrement())
  nombre      String
  puesto      String
  bio         String?  @db.Text
  imagenUrl   String?
  linkedinUrl String?
  activo      Boolean  @default(false)
  createdAt   DateTime @default(now())
}

// Modelo para las noticias o artículos del blog
model Noticia {
  id        Int      @id @default(autoincrement())
  titulo    String
  contenido String   @db.Text
  imagen    String?
  publicado Boolean  @default(false)
  createdAt DateTime @default(now())
}

// Modelo para las sucursales físicas
model Sucursal {
  id        Int      @id @default(autoincrement())
  nombre    String
  direccion String
  telefono  String?
  horario   String?
  mapaUrl   String?
  activo    Boolean  @default(false)
  createdAt DateTime @default(now())
}

// Modelo para las Preguntas Frecuentes (FAQ)
model FAQ {
  id        Int      @id @default(autoincrement())
  pregunta  String
  respuesta String   @db.Text
  categoria String?
  activa    Boolean  @default(false)
  createdAt DateTime @default(now())
}